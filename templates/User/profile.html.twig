{% extends 'base.html.twig' %}

{% block title %}LeMeilleurCoin - Symfony Projet{% endblock %}

{% block body %}
        <main class="block_main">
        <h2 class="mb-5">Annonces</h2>

        {% if sessionProfile == false %}
            <h4>Profile de : {{ user.username}}</h4>
        {% else %}
            <h4>Votre profile</h4>
        {% endif %}
         {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}" role="alert">
                    {{message}}
                </div>
            {% endfor %}
        {% endfor %}

            <table class="table table-hover">
                <thead>
                <tr>
                    <th scope="col">Titre</th>
                    <th scope="col">Description</th>
                    <th scope="col">Ville</th>
                    <th scope="col">Code postal</th>
                    <th scope="col">Prix</th>
                    <th scope="col"></th>
                    {% if sessionProfile == true %}
                    <th scope="col"></th>
                    {% endif %}
                </tr>
                </thead>
                <tbody>
                {% for annonce in user.ads %}
                    <tr>
                        <td scope="row">{{ annonce.title }}</td>
                        <td>{{ annonce.description }}</td>
                        <td>{{ annonce.city }}</td>
                        <td>{{ annonce.zip }}</td>
                        <td>{{ annonce.price }}</td>
                        <td><a href="/annonces/{{annonce.id}}">Voir</a></td>
                        {% if sessionProfile == true %}
                        <td><a style="color: red" href="/remove/ad/{{annonce.id}}"><i class="fas fa-trash"></i></a></td>
                        {% endif %}
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </main>
{% endblock %}

{% block javascripts %}{% endblock %}


